{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6"],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "pretty": true,
    "rootDir": "src",
    "sourceMap": false,
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    "build",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "types": [
    "typePatches"
  ]
}
